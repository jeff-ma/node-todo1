<h1>Login</h1>
<div class="row">
<form class="form-horizontal" name="login" method="post" action="/login">
	<!-- Text input-->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="email">Email</label>  
	  <div class="col-md-4">
	  <input id="email" name="email" type="text" placeholder="Email" class="form-control input-md" value="{{email}}" required>
	  </div>
	</div>

	<!-- Text input-->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="password">Password</label>  
	  <div class="col-md-4">
	  <input id="password" name="password" type="password" placeholder="Password" class="form-control input-md" value="{{password}}" required>
	  </div>
	</div>

	<!-- Button -->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="login"></label>
	  <div class="col-md-4">
	    <button id="buttonLogin" name="buttonLogin" class="btn btn-primary">Log In</button>
	  </div>
	</div>
</form>
</div>
{{#if error}}
<div class="row">
	<p class="text-danger text-center"><strong>Sorry incorrect email or password</strong></p>
</div>
{{/if}}